---
// src/components/NavBar.astro

const navLinks = [
  { href: "#home", label: "Ana Sayfa" },
  { href: "#gallery", label: "Kreasyonlarımızı Gör" },
  { href: "#about", label: "Biz Kimiz?" },
  { href: "#contact", label: "Bize Ulaşın" },
];
---

<header class="sticky top-0 z-50 bg-background/80 backdrop-blur-sm shadow-sm">
  <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
    <a href="#home" class="text-xl font-serif font-bold text-text-main">
      Mor İncili Mutfak
    </a>
    <ul class="hidden md:flex space-x-8">
      {
        navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class="text-text-light hover:text-primary transition-colors duration-300 nav-link"
            >
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>
    <div class="md:hidden">
      <button
        id="mobile-menu-button"
        aria-label="Menüyü Aç/Kapat"
        class="text-text-main focus:outline-none"
      >
        <svg
          width="28"
          height="28"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      <div
        id="mobile-menu"
        class="hidden absolute right-6 top-16 bg-background rounded-lg shadow-lg py-4 px-6 z-50"
      >
        <ul class="flex flex-col space-y-4">
          {
            navLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-text-light hover:text-primary transition-colors duration-300 nav-link"
                  onclick="document.getElementById('mobile-menu').classList.add('hidden');"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <script type="text/javascript" is:inline>
        const btn = document.getElementById("mobile-menu-button");
        const menu = document.getElementById("mobile-menu");
        btn?.addEventListener("click", () => {
          menu?.classList.toggle("hidden");
        });
        // Optional: Close menu on outside click
        document.addEventListener("click", (e) => {
          if (!btn.contains(e.target) && !menu.contains(e.target)) {
            menu.classList.add("hidden");
          }
        });
      </script>
    </div>
  </nav>
</header>
